<%= link_to "Chatroom", chatroom_path, class: "item" %>
<%= link_to "All Users", users_path, class: "item" %>
<div class="right menu">
  <% if logged_in? %>
  <%= link_to "My Friends", my_friends_path, class: "item" %>
  <%= link_to  current_user.username, user_path(current_user), class: "item" %>
  <% end %>
  <div class="ui dropdown item">
    Account <i class="dropdown icon"></i>
    <div class="menu">
      <% if logged_in? %>
      <%= link_to "Your Profile", user_path(current_user), class: "item" %>
      <%= link_to "Log out", logout_path, method: :delete, class: "item" %>
      <% else %>
      <%= link_to "Log in", login_path, class: "item" %>
      <% end %>
    </div>
  </div>
  <% if !logged_in? %>
  <div class="item">
    <%= link_to "Log in", login_path, class: "ui primary button" %>
  </div>
  <% end %>
  </div>
