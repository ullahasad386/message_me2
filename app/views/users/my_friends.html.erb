<h1 align="center">My Friends</h1>

<%= render 'friends/lookup' %>

<% if @friendships.size > 0 %>
  <table class="ui selectable inverted table"">
    <thead>
      <tr>
        <th class="colspan="3"">
          <h2>My Friends</h2>
        </th>
      </tr>
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @friendships.each do |friend| %>
        <tr>
          <td><b><%= friend.username %></b></td>
          <td>
            <%= link_to "View Profile", user_path(friend) , class: "ui orange submit button"%>
            <%= link_to "Remove Friend", friendship_path(friend), class: "ui orange submit button",
              method: :delete,
              data: { confirm: "Are you sure?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  <table>
<% else %>
  <div>
    <p></p>
    <h3>
      You don't have any friends yet, please add some!
    </h3>
  </div>
<% end %>
